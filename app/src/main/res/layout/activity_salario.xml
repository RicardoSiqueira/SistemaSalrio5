<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SalarioActivity">


    <RadioGroup
            android:layout_width="268dp"
            android:layout_height="0dp"
            android:id="@+id/radioGroupSalario"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/buttonCalcular">
        <RadioButton
                android:text="40%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton40%" android:layout_weight="1"/>
        <RadioButton
                android:text="45%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton45%" android:layout_weight="1"/>
        <RadioButton
                android:text="50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton50%" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Qual será o percentual?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/radioGroupSalario" android:layout_marginTop="97dp"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroupSalario" android:textColor="@android:color/holo_blue_light"/>
    <Button
            android:text="Mostrar Novo Salário"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCalcular"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupSalario" android:layout_marginBottom="69dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:text="Digite o seu Salario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/digsalario"/>

</android.support.constraint.ConstraintLayout>